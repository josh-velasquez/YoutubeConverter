<Window x:Class="YoutubeConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YoutubeConverter"
        mc:Ignorable="d"
        Title="Youtube Converter" Height="359.334" Width="625.666">
    <Grid Background="#FF296673">
        <TextBox x:Name="urlTextBox" HorizontalAlignment="Left" Height="26" Margin="109,101,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="275" VerticalContentAlignment="Center" Foreground="White" Background="#FF43A9BF">
            <TextBox.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="4" />
                </Style>
            </TextBox.Resources>
        </TextBox>
        <Label Content="URL" HorizontalAlignment="Left" Margin="73,101,0,0" VerticalAlignment="Top" Foreground="#FFE9C46A" />
        <Button Content="Clear" HorizontalAlignment="Left" Margin="490,101,0,0" VerticalAlignment="Top" Width="96" Height="26" Background="#FFCF3F3F" Foreground="White" Click="OnClearClick">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="4" />
                </Style>
            </Button.Resources>
        </Button>
        <TextBox x:Name="targetDirTextBox" HorizontalAlignment="Left" Height="26" Margin="109,56,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="477" VerticalContentAlignment="Center" Foreground="White" Background="#FF43A9BF">
            <TextBox.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="4" />
                </Style>
            </TextBox.Resources>
        </TextBox>
        <Label Content="Directory" HorizontalAlignment="Left" Margin="46,56,0,0" VerticalAlignment="Top" Foreground="#FFE9C46A" />
        <TextBox x:Name="apiKeyTextBox" HorizontalAlignment="Left" Height="26" Margin="109,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="477" VerticalContentAlignment="Center" Foreground="White" Background="#FF43A9BF">
            <TextBox.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="4" />
                </Style>
            </TextBox.Resources>
        </TextBox>
        <Label Content="Shazam API Key" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Foreground="#FFE9C46A" />
        <ListBox x:Name="statusListBox" HorizontalAlignment="Left" Height="150" Margin="109,149,0,0" VerticalAlignment="Top" Width="477" Background="#FFBDCFBF">
            <ListBox.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="4" />
                </Style>
            </ListBox.Resources>
        </ListBox>
        <Label Content="Status" HorizontalAlignment="Left" Margin="62,149,0,0" VerticalAlignment="Top" Foreground="#FFE9C46A" RenderTransformOrigin="0.548,-0.5" />
        <Button Content="Convert" HorizontalAlignment="Left" Margin="389,101,0,0" VerticalAlignment="Top" Width="96" Height="26" Background="#FF60CF3F" Foreground="White" Click="OnConvertClick">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="4" />
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>