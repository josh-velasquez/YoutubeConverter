<Window x:Class="YoutubeConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YoutubeConverter"
        mc:Ignorable="d"
        Title="Youtube Converter" Height="125" Width="613.666">
    <Grid Background="#FF264653">
        <TextBox x:Name="urlTextBox" HorizontalAlignment="Left" Height="26" Margin="73,49,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="412" VerticalContentAlignment="Center" Foreground="#FFF4A261" Background="#FF645F53" />
        <Label Content="URL" HorizontalAlignment="Left" Margin="37,49,0,0" VerticalAlignment="Top" Foreground="#FFE9C46A" />
        <Button Content="Convert" HorizontalAlignment="Left" Margin="490,49,0,0" VerticalAlignment="Top" Width="96" Height="26" Background="#FF2A9D8F" Foreground="#FF334B2F" Click="OnConvertClick" />
        <TextBox x:Name="targetDirTextBox" HorizontalAlignment="Left" Height="26" Margin="73,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="513" VerticalContentAlignment="Center" Foreground="#FFF4A261" Background="#FF645F53" />
        <Label Content="Directory" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Foreground="#FFE9C46A" />
    </Grid>
</Window>